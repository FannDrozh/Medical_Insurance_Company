<Window x:Class="Medical_Insurance_Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medical_Insurance_Company"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="StackPanel"
                    Grid.RowSpan="10" 
                    Grid.ColumnSpan="2" Margin="0,0,40,0">
            <Image Source="/Image/Logo.png" Height="70" Width="113" />

            <Menu x:Name="MainMenu" Height="364" RenderTransformOrigin="0.509,0.469" Width="118">
                <MenuItem Header="Подать заявку" 
                          x:Name="Sumbit_Application"
                          Height="41" 
                          Width="117">
                    <MenuItem.Icon>
                        <Image Source="/Image/Logo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Мед. центры" 
                          x:Name="Med_Center"
                          Height="41" 
                          Width="117">
                    <MenuItem.Icon>
                        <Image Source="/Image/Logo.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </StackPanel>
        <Frame x:Name="SumbitFrame"
               Grid.Column="2"
               Grid.ColumnSpan="8"
               Grid.Row="0"
               Grid.RowSpan="10"/>
    </Grid>
</Window>
